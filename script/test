#!/usr/bin/env bash

set -e

ARGS=$@

if egrep -q gqt <(echo "$ARGS"); then
   (cd ../../../..; ./scripts/remote-fly ci/guardian.yml -- $ARGS)
elif [ -d $ARGS ] && 
     [ "$(find $ARGS -maxdepth 1 -name '*_linux_test.go')" != "" ]; then
   (cd ../../../..; ./scripts/remote-fly ci/guardian.yml -- $ARGS)
else
  ginkgo -r -race $ARGS
fi

